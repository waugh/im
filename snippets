# Routine testing.

nvm use
node_modules/.bin/coffee

Object.keys support = require './support'
load = support.load

Object.keys support = load './support'
load = support.load

Object.keys global_variable = load './global_variable'
assert.strictEqual imperatrix_mundi, global_variable.the, 'imperatrix_mundi'

Object.keys compiler = load './compiler'
compiler.infect imperatrix_mundi # trashes symbol table.
symbol = imperatrix_mundi.symbol

Object.keys interpreter = load './interpreter'
interpreter.infect global
(trampoline = imperatrix_mundi.trampoline).constructor


